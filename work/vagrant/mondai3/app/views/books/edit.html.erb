<h1>Editing Book</h1>
<br>
<%= form_for(@book) do |f| %>
	<h4>title</h4>
	<%= f.text_field :title,class:"book_title" %>
	<h4>body</h4>
	<%= f.text_area :body,class:"book_body" %>
	<br>
	<br>
    <%= f.submit 'UpdateBook' %>
    <br>
    <br>
    <%= link_to "show", book_path(@book),class:"show_#{@book.id}" %> |
     <%= link_to "back", new_book_path(@book),class:"back" %>
<% end %>