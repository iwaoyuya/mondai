<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
 <% end %>

<html>
<body>
<h1>Books</h1>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
	<%= link_to "show", book_path(book.id),class:"show_#{@book.id}" %>
	<%= link_to "Edit", edit_book_path(book.id),class:"edit_#{@book.id}" %>
	<%= link_to "destroy", destroy_book_path(book.id),class:"destory_#{@book.id}", method: :delete, "data-confirm" => "Are you sure?" %>

</td>

</tr>
<% end %>
</table>
<br>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title,class:"book_title" %>

    <h4>Body</h4>
    <%= f.text_area :body,class:"book_body" %>

<br>
    <%= f.submit 'Create Book' %>
 <% end %>
</body>
</html>